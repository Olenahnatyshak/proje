  <script>
    // Basit tablo sÄ±ralama: tablo baÅŸlÄ±klarÄ±na tÄ±klayarak sÄ±rala
    document.addEventListener('DOMContentLoaded', () => {
      const normalizeValue = (text) => {
        if (!text) return { type: 'text', value: '' };
        const cleaned = text
          .replace(/\s+/g, '')
          .replace(/TL/gi, '')
          .replace(/%/g, '')
          .replace(/\./g, '')
          .replace(/,/g, '.');
        const numeric = parseFloat(cleaned);
        if (Number.isFinite(numeric)) {
          return { type: 'num', value: numeric };
        }
        return { type: 'text', value: text.toLocaleLowerCase('tr-TR') };
      };

      const sortTable = (table, columnIndex, th) => {
        const tbody = table.tBodies[0];
        if (!tbody) return;
        const rows = Array.from(tbody.querySelectorAll('tr'));
        const currentDir = th.dataset.sortDir === 'asc' ? 'asc' : 'desc';
        const nextDir = currentDir === 'asc' ? 'desc' : 'asc';

        table.querySelectorAll('th').forEach((head) => head.removeAttribute('data-sort-dir'));
        th.dataset.sortDir = nextDir;

        const sortedRows = rows.sort((a, b) => {
          const aVal = normalizeValue(a.cells[columnIndex]?.textContent.trim());
          const bVal = normalizeValue(b.cells[columnIndex]?.textContent.trim());

          if (aVal.type === 'num' && bVal.type === 'num') {
            return nextDir === 'asc' ? aVal.value - bVal.value : bVal.value - aVal.value;
          }
          return nextDir === 'asc'
            ? String(aVal.value).localeCompare(String(bVal.value), 'tr-TR')
            : String(bVal.value).localeCompare(String(aVal.value), 'tr-TR');
        });

        sortedRows.forEach((row) => tbody.appendChild(row));
      };

      document.querySelectorAll('table.sortable-table').forEach((table) => {
        const headers = table.querySelectorAll('thead th');
        headers.forEach((th, idx) => {
          th.style.cursor = 'pointer';
          th.addEventListener('click', () => sortTable(table, idx, th));
        });
      });
    });
  </script>
